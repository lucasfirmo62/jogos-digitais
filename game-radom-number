Jogo Js

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adivinhe o Número</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin-top: 50px;
        }
        input, button {
            margin: 10px;
            padding: 10px;
            font-size: 16px;
        }
    </style>
</head>
<body>
    <h1>Adivinhe o Número</h1>
    <p>Eu escolhi um número entre 1 e 100. Tente adivinhar!</p>
    <input type="number" id="palpite" placeholder="Digite seu palpite" />
    <button onclick="adivinhar()">Adivinhar</button>
    <p id="resultado"></p>
    <p id="tentativas"></p>
    <script>

let numeroSecreto = Math.floor(Math.random() * 100) + 1;
let tentativas = 0;
const maxTentativas = 10;

function adivinhar() {
    const palpite = parseInt(document.getElementById('palpite').value);
    const resultado = document.getElementById('resultado');
    const tentativasElem = document.getElementById('tentativas');
    tentativas++;

    if (tentativas <= maxTentativas) {
        if (palpite < numeroSecreto) {
            resultado.textContent = 'O número é maior.';
        } else if (palpite > numeroSecreto) {
            resultado.textContent = 'O número é menor.';
        } else {
            resultado.textContent = `Parabéns! Você adivinhou o número em ${tentativas} tentativas.`;
            resetarJogo();
            return;
        }
        tentativasElem.textContent = `Tentativas: ${tentativas} de ${maxTentativas}`;
    } else {
        resultado.textContent = `Você não conseguiu adivinhar o número. O número secreto era ${numeroSecreto}.`;
        resetarJogo();
    }
}

function resetarJogo() {
    numeroSecreto = Math.floor(Math.random() * 100) + 1;
    tentativas = 0;
    setTimeout(() => {
        document.getElementById('resultado').textContent = '';
        document.getElementById('tentativas').textContent = '';
        document.getElementById('palpite').value = '';
    }, 5000);
}

</script>
</body>
</html>
